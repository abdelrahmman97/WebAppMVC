@using AppRepository.Models
@model UserSignUpViewModel
@{
    var Roles = ViewData["Roles"] as IEnumerable<SelectListItem>;
    Layout = "./../Shared/_SignUpInLayout.cshtml";
}

<h2>Create New Account</h2>
<form asp-action="SignUp" asp-controller="Account" method="post">
    <div asp-validation-summary="All"></div>
    <div class="row m-2 p-0">
        <div class="col">
            <div class="form-floating">
                <input asp-for="FirstName" class="form-control" placeholder="">
                <label asp-for="FirstName"></label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-floating">
                <input asp-for="LastName" class="form-control" placeholder="">
                <label asp-for="LastName"></label>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row m-2 p-0">
        <div class="col">
            <div class="form-floating">
                <input asp-for="PhoneNumber" class="form-control" placeholder="">
                <label asp-for="PhoneNumber"></label>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-floating">
                <input asp-for="NationalID" class="form-control" placeholder="">
                <label asp-for="NationalID"></label>
                <span asp-validation-for="NationalID" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row m-2 p-0">
        <div class="col">
            <div class="form-floating">
                <input asp-for="UserName" class="form-control" placeholder="">
                <label asp-for="UserName"></label>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-floating">
                <input asp-for="Email" class="form-control" placeholder="">
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row m-2 p-0">
        <div class="col">
            <div class="form-floating">
                <input asp-for="Password" class="form-control" placeholder="">
                <label asp-for="Password"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-floating">
                <input asp-for="ConfirmPassword" class="form-control" placeholder="">
                <label asp-for="ConfirmPassword"></label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row m-2 p-0">
        <div class="">
            <label asp-for="Role" class="form-label"></label>
            <select asp-for="Role" class="form-control" asp-items="Roles"></select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary mt-4">Sign up</button>
</form>



