@using AppRepository.Models
@model UserSignInViewModel
@{
    Layout = "_SignUpInLayout";
}

<h2>Sign in to your Account</h2>
@if (Model != null)
{
    @if (Model.ReturnUrl != "/")
    {
        <p class="lead">you must sign in first</p>
    }
}
<div class="form-signin w-50 m-auto">
    <form asp-action="SignIn" asp-controller="Account" method="post">
        <div asp-validation-summary="All"></div>
        <input asp-for="ReturnUrl" class="invisible" />
        <div class="mb-3">
            <label asp-for="UserName" class="form-label"></label>
            <input asp-for="UserName" class="form-control">
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" class="form-control">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="RememberMe">
                <label class="form-check-label" asp-for="RememberMe"></label>
                <span asp-validation-for="RememberMe" class="text-danger"></span>
            </div>
            <a asp-action="ForgotPassword" asp-controller="Account" class="">Forget Password</a>
        </div>
        <button type="submit" class="btn btn-primary">Sign In</button>
    </form>
</div>



